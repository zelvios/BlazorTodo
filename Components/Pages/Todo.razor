@page "/todo"
@using Newtonsoft.Json
@using System.IO
@using BlazorTodo.Components.Models
@inject IWebHostEnvironment Env

<h3 class="mb-3">Todo List</h3>

<div class="card p-3 mb-4 shadow-sm">
    <h5>Add a New Todo</h5>

    <div class="row mb-2">
        <div class="col">
            <input class="form-control" placeholder="Title" @bind="_newTodo.Title" />
        </div>
        <div class="col">
            <input class="form-control" placeholder="Description" @bind="_newTodo.Description" />
        </div>
    </div>

    <div class="row mb-2">
        <div class="col">
            <input type="date" class="form-control" @bind="_newTodo.Date" />
        </div>
        <div class="col">
            <select class="form-select" @bind="_newTodo.Status">
                @foreach (var status in Enum.GetValues<TodoStatus>())
                {
                    <option value="@status">@status</option>
                }
            </select>
        </div>
    </div>

    <button class="btn btn-primary" @onclick="AddTodo">Add Todo</button>
</div>

@if (_todos.Count == 0)
{
    <p>No todos yet. Add one above!</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var todo in _todos)
            {
                <tr>
                    <td>@todo.Title</td>
                    <td>@todo.Description</td>
                    <td>@todo.Date.ToShortDateString()</td>
                    <td>@todo.Status</td>
                    <td>
                        <button class="btn btn-sm btn-success me-2" @onclick="() => MarkCompleted(todo)">Mark as complete</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteTodo(todo)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<TodoItem> _todos = [];
    private TodoItem _newTodo = new();
    private string FilePath => Path.Combine(Env.WebRootPath, "data", "todos.json");

    protected override async Task OnInitializedAsync()
    {
        await LoadTodosAsync();
    }

    private async Task AddTodo()
    {
        if (string.IsNullOrWhiteSpace(_newTodo.Title)) return;

        _todos.Add(new TodoItem
        {
            Title = _newTodo.Title,
            Description = _newTodo.Description,
            Date = _newTodo.Date,
            Status = _newTodo.Status
        });

        Console.WriteLine($"Creating new todo {_todos}");
        _newTodo = new TodoItem();
        
        await SaveTodosAsync();
        StateHasChanged();
    }

    private async Task DeleteTodo(TodoItem todo)
    {
        _todos.Remove(todo);
        await SaveTodosAsync();
    }

    private async Task MarkCompleted(TodoItem todo)
    {
        todo.Status = TodoStatus.Completed;
        await SaveTodosAsync();
    }

    private async Task LoadTodosAsync()
    {
        try
        {
            if (File.Exists(FilePath))
            {
                var json = await File.ReadAllTextAsync(FilePath);
                var todos = JsonConvert.DeserializeObject<List<TodoItem>>(json);
                if (todos is not null)
                    _todos = todos;
            }
            else
            {
                Directory.CreateDirectory(Path.GetDirectoryName(FilePath)!);
                await SaveTodosAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading todos: {ex.Message}");
        }
    }

    private async Task SaveTodosAsync()
    {
        try
        {
            Directory.CreateDirectory(Path.GetDirectoryName(FilePath)!);
            var json = JsonConvert.SerializeObject(_todos, Formatting.Indented);
            await File.WriteAllTextAsync(FilePath, json);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving todos: {ex.Message}");
        }
    }
}